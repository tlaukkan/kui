<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender class="org.apache.log4j.ConsoleAppender" name="console">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %m [%t]%n"/>
        </layout>
    </appender>

    <appender name="file" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="true" />
        <param name="maxFileSize" value="10MB" />
        <param name="maxBackupIndex" value="10" />
        <param name="file" value="web.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %m [%t] %n" />
        </layout>
    </appender>

    <appender name="healthfile" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="true" />
        <param name="maxFileSize" value="10MB" />
        <param name="maxBackupIndex" value="10" />
        <param name="file" value="health.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{yyyy-MM-dd HH:mm:ss.SSS},%m%n" />
        </layout>
    </appender>

    <appender name="kui" class="org.kui.client.tracker.log4j.KuiAppender">
    </appender>

    <logger name="org.kui">
        <level value="debug"/>
    </logger>

    <logger name="org.xnio">
        <level value="warn"/>
    </logger>

    <logger name="com.datastax">
        <level value="warn"/>
    </logger>

    <logger name="org.kui.server.modules.health.api">
        <level value="info"/>
        <appender-ref ref="healthfile" />
    </logger>

    <root>
        <priority value ="info" />
        <appender-ref ref="console" />
        <appender-ref ref="file" />
        <appender-ref ref="kui" />
    </root>

</log4j:configuration>